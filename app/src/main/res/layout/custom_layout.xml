<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_2dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mainConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_4dp"
        android:background="@drawable/recycler_item_background"
        android:paddingBottom="@dimen/size_6dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_8dp"
            android:padding="@dimen/size_6dp"
            android:text="sunt aut facere repellat provident occaecati excepturi optio reprehenderit"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_4dp"
            android:maxLines="3"
            android:text="quia et suscipit\nsuscipit recusandae consequuntur expedita et cum\nreprehenderit molestiae ut ut quas totam\nnostrum rerum est autem sunt rem eveniet architecto"
            android:textColor="#000"
            android:textSize="@dimen/text_size_14sp"
            app:layout_constraintEnd_toStartOf="@+id/delete_icon"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titles" />

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/size_8dp"
            android:layout_marginStart="@dimen/size_2dp"
            android:layout_marginLeft="@dimen/size_2dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/delete"
            app:layout_constraintEnd_toStartOf="@+id/edit_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/size_8dp"
            android:layout_marginStart="@dimen/size_2dp"
            android:layout_marginLeft="@dimen/size_2dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/eddit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
